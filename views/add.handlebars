<div class="container">
<body>
    
<a href="/">Back to Home</a>
<h2>You have added a friend!</h2>
<h1>My HCI Friends</h1>
    {{#each friends}}
        <div class="friend">
            <img class="img-responsive img-rounded" src="{{imageURL}}" alt="fake friend" />
            <h3><a href="#">{{name}}</a></h3>
            <p>{{description}}</p>
            <hr>
        </div>
    {{/each}}

   
</body>
</div>
